.footer-holder {
    height: 48px;
}

.footer {
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 99;
    background-color: #fff;
    border-top: 1px solid;
    border-image-slice: 1 0 1;
    border-image-source: url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='1' height='1'><rect width='1' height='.5' y='.5' fill='#d3d3d3'/></svg>");
}

.content {
    display: flex;
    align-items: center;
    justify-content: space-around;
    width: 100vw;
    height: 48px;
}

.button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
}

.icon {
    margin-right: 5px;
    width: 20px;
    height: 20px;
}