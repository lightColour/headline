.recommand-item {
    display: flex;
    padding: 12px;
    margin-bottom: 3px;
}

.recommand-pic {
    width: 90px;
    height: 60px;
    border-radius: 8px;
    flex: 0 0 auto;
    object-fit: cover;
}

.recommand-contain {
    flex: 1 1 auto;
    display: flex;
    height: 60px;
    flex-direction: column;
    justify-content: center;
    margin-right: 12px;
    overflow: hidden;
}

.recommand-title {
    color: #1a1a1a;
    font-size: 16px;
    line-height: 1.28;
    display: -webkit-box;
    text-overflow: ellipsis;
    overflow: hidden;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    margin-bottom: 5px;
}

.recommand-description {
    color: #999;
    font-size: 13px;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    width: 100%;
    line-height: 1;
}