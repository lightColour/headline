@keyframes slideIn {
    from {
        transform: translateX(100%);
    }

    to {
        transform: translateX(0%);
    }
}

.root {
    position: fixed;
    bottom: 100px;
    right: 0;
    border-radius: 50px 0 0 50px;
    padding: 10px 16.5px;
    line-height: 1.2;
    font-size: 15px;
    color: #fff;
    font-weight: 500;
    background-color: #0084ff;
    box-shadow: 0 1px 6px 0 rgba(0,0,0,0.4);
    animation: slideIn 0.3s ease;
    transform: translateX(0%);
    will-change: transform;
}