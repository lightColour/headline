<view class="block-class">
    <view bind:tap="handleTap" class="image-continer">
        <image class="playIcon" src="/assets/gif.88d823.svg" wx:if="{{status==='normal'}}"></image>
        <image class="playIcon" src="/assets/gif-loading.907b5d.svg" wx:if="{{status==='loading'}}"></image>
        <image class="playIcon" src="/assets/gif-refresh.131df7.svg" wx:if="{{status==='error'}}"></image>
        <image lazyLoad class="poster {{class}}" mode="widthFix" src="{{poster}}" style="width: {{width}}px; height: {{height}}px;"></image>
        <image bind:error="handleGifError" bind:load="handleGifLoad" class="gif {{class}}" mode="widthFix" src="{{src}}" style="width: {{width}}px;" wx:if="{{showGif}}"></image>
    </view>
    <rich-text nodes="{{restNodes}}"></rich-text>
</view>
