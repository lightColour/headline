.image-continer {
    position: relative;
    margin: 0 auto;
}

.poster {
    max-width: 100%;
    display: block;
    margin: 0 auto;
}

.gif {
    position: absolute;
    max-width: 100%;
    height: 100%;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
}

.size-small {
    max-width: 40%;
}

.playIcon {
    position: absolute;
    z-index: 10;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    width: 60px;
    height: 60px;
}

.figcaption {
    margin-top: 0.35em;
    font-size: 0.9em;
    line-height: 1.5;
    text-align: center;
    color: #999;
}