<view bind:tap="handleTap" class="block-class aspect-ratio-box">
    <view class="aspect-ratio-box-inside">
        <block wx:if="{{!video}}">
            <image lazyLoad class="poster" mode="aspectFit" src="{{poster}}"></image>
            <image class="playIcon" src="/assets/play.b373b9.svg"></image>
        </block>
        <video autoplay bindfullscreenchange="handleFullScreenChange" bindtimeupdate="handleTimeUpdate" class="video" duration="{{video.playlist.sd.duration}}" id="myVideo" initialTime="{{lastPlayTime}}" poster="{{poster}}" src="{{video.playlist.sd.play_url}}" wx:if="{{video}}"></video>
    </view>
</view>
