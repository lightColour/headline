<view class="ztext">
    <rich-text nodes="{{html}}" wx:if="{{html}}"></rich-text>
    <block wx:if="{{!html}}" wx:for="{{list}}" wx:key="{{index}}">
        <rich-text nodes="{{item.tree}}" wx:if="{{item.type===null}}"></rich-text>
        <ui-image blockClass="ui-block" node="{{item.node}}" previewUrls="{{previewUrls}}" wx:elif="{{item.type==='image'}}"></ui-image>
        <ui-codeblock blockClass="ui-block" node="{{item.node}}" wx:elif="{{item.type==='codeblock'}}"></ui-codeblock>
        <ui-video blockClass="ui-block" node="{{item.node}}" useFullscreenVideo="{{useFullscreenVideo}}" wx:elif="{{item.type==='video'}}"></ui-video>
        <ui-gif blockClass="ui-block" node="{{item.node}}" wx:elif="{{item.type==='gif'}}"></ui-gif>
    </block>
</view>
