.aspect-ratio-box {
    position: relative;
    height: 0;
    overflow: hidden;
    padding-top: 56.25%;
}

.aspect-ratio-box-inside {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.video,.poster {
    max-width: 100%;
    width: 100%;
    height: 100%;
    background: #000;
}

.playIcon {
    position: absolute;
    z-index: 10;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    width: 50px;
    height: 50px;
}